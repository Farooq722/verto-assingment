{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start:api": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "generate": "bunx prisma generate",
    "migrate": "bunx prisma migrate dev",
    "db:deploy": "bunx prisma migrate deploy && bun run generate",
    "build": "bunx prisma generate && bunx esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --external:@prisma/client",
    "start:prod": "node dist/index.js",
    "vercel-build": "bun run build"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "zod": "^4.1.11"
  }
}
